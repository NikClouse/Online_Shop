@model RoleViewModel

<form method="post">
	<div>
		<h3>Создание нового роли</h3>
	</div>

	<div class="text-danger font-weigh-bold" asp-validation-summary="All"></div>

	<div class=" row">
		<div class="col-6">
			<label asp-for="Name"></label> <br />
			<input class="col-form-label-sm" asp-for="Name" />
			<span asp-validation-for="Name"></span>
		</div>
	</div>

	<br />
	<div>
		<button type="submit" asp-area="Admin" asp-controller="Role" asp-action="Add">Создать</button>
	</div>
</form>

