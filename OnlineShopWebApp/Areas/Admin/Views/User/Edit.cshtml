@model UserViewModel

<form method="post">
	<div>
		<h3>Редактировать продукта</h3>
	</div>

	<div class="text-danger font-weigh-bold" asp-validation-summary="All"></div>

	<input type="hidden" name="Id" value="@Model.Id"/>
	

	<div class=" row">
		<div class="col-6">
			<label asp-for="Email"></label> <br />
			<input class="col-form-label-sm" asp-for="Email" />
			<span asp-validation-for="Email"></span>
		</div>
	</div>

	<div class=" row">
		<div class="col-6">
			<label asp-for="Name"></label> <br />
			<input class="col-form-label-sm" asp-for="Name" />
			<span asp-validation-for="Name"></span>
		</div>
	</div>

	<div class=" row">
		<div class="col-6">
			<label asp-for="Phone"></label> <br />
			<input class="col-form-label-sm" asp-for="Phone"  />
			<span asp-validation-for="Phone"></span>
		</div>
	</div>
	

	<br />
	<div>
		<button type="submit" asp-area="Admin" asp-controller="User" asp-action="Edit">Обновить</button>
	</div>
</form>
