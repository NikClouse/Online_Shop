@model CartViewModel

@if (Model == null || Model.Items.Count == 0)
{
	<h3>Корзина пустая</h3>
}
else
{
	<div class=" row">
		<div class="col">
			<table class="table">
				<thead>
					<tr>
						<th>Название</th>
						<th>Цена</th>
						<th>Количество</th>
						<th>Стоимость</th>
						
					</tr>
				</thead>
				<tbody>
					@foreach(var item in Model.Items)
					{
						<tr>
							<td>@item.Product.Name</td>
							<td>@item.Product.Cost &#8381</td>
							<td>@item.Amount</td>
							<td>@item.Cost &#8381</td>
							<td>

								<div class="btn-group btn-group-sm" role="group" aria-label="Small button group">
									
									<a href="/cart/add?productId=@item.Product.Id" class="btn btn-outline-success">+</a>
									<button class="btn-outline-primary">@item.Amount</button>
									<a href="/cart/remove?productId=@item.Product.Id" class="btn btn-outline-success">-</a>
								</div>
							</td>
							
						</tr>
					}
				</tbody>
			</table>
			<div class="text-sm-right">
				<h4>Итоге : @Model.Cost &#8381</h4>
			</div>
			<div class=" text-lg-center">
				<table class="table">
				<a class=" btn btn-outline-success" href="/home/index" role="button">Продолжить покупку</a>  
				<a class=" btn btn-outline-success" href="/order/index" role="button">Оформит заказ</a>
					<a class=" btn btn-outline-primary" href="/cart/clear" role="button">Очистить корзина</a>
				</table>
			</div>
		
		</div>
	</div>
}